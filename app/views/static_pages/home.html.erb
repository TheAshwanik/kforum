<div class="hero-unit">
  <h1>Welcome to the KForum</h1>
  <center><p>This is the home page for the KForum application.</p>
    
  <br /><br />
  <div>
	  <br /><br />
	  <% if !nil && user_signed_in? && current_user.confirmed? %>
	    <div class="pull-right">Signed in as <%= current_user.email %>. Not you?
	    <%= link_to "Sign out", destroy_user_session_path , :method => :delete %></div>
	  <% else %>
	    <h3><%= link_to "Sign up", new_user_registration_path , :class => "btn btn-primary", :style =>"color:white" %>
	    	   or   <%= link_to "Sign in", new_user_session_path , :class => "btn btn-primary", :style =>"color:white" %></h3>
	  <% end %>
	  <br />
  </div>
  </center>  

  
</div> 

