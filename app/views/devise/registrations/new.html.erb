<% full_title "Sign Up" %>
<h2 class="pull-left">Sign up</h2><br /><br /><br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %>
  <%= f.text_field :username %></div>
  
  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />
  
  <div><%= f.check_box :mail_subscription %> <%= f.label "Lend a helping hand, by receiving E-mail for new posts?" %></div><br />

  <div><%= f.submit "Sign up"  , :class => "btn btn-primary", :style =>"color:white" %></div>
<% end %>


<%= render :partial => "devise/shared/links" %>
