<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all" %>
	<%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'jquery' %>
    <script type="text/javascript" src="/assets/jquery.markitup.js"></script>
    <script type="text/javascript" src="/assets/jquery.timeago"></script>
    <script type="text/javascript" src="/assets/set.js"></script>
    <script type="text/javascript"> 
	    $(function() {
	   $('#flash').delay(500).fadeIn('normal', function() {
	      $(this).delay(2500).fadeOut();
	   });
	});
	</script>
	<script>jQuery(document).ready(function($) {$("abbr.timeago").timeago();});</script>
    <link rel="stylesheet" type="text/css" href="/assets/style.css" />
	<link rel="stylesheet" type="text/css" href="/assets/default_style.css" />
	   
    <%= render 'layouts/shim' %>
    
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
        <% flash.each do |key, value| %>
         <%= content_tag(:div, value , class: "alert alert-#{key}", :id => "flash") %>
          
        <% end %>
	    
	<%= yield %>
	<%= render 'layouts/footer' %>
	<%= debug(params) if Rails.env.development? %>
    </div>

  </body>
</html>
