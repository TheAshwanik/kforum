<% provide(:title, "Forums") %>
<br />
<h4 class="pull-left"><%= @forum.name %></h4><br /><br />
<br />
<table class="table table-striped table-bordered">  
  <tr>  
    <th width="60%">Topic Title</th>  
    <th width="10%">Total Posts</th>  
    <th width="30%">Last Post</th>
    <th></th>
    <th></th>  
  </tr>  
  <% for topic in @forum.topics %>  
    <tr>  
      <td><%= link_to h(topic.name), topic_path(topic.id) %>  
      <td><%= topic.posts.count %></td>  
      <td class="right">
      	<%= distance_of_time_in_words_to_now topic.last_post_at %> ago by 
      	<%= link_to topic.user.username, "/users/#{topic.last_poster_id}" %>
      </td>
     <td><%= link_to "Edit",edit_topic_path(topic.id) %></td>
     <% if admin? %><td><%= link_to "Delete", topic, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
    </tr>  
  <% end %>  
</table><br />  
<p><%= link_to "New Topic", "/topics/new?forum_id=#{@forum.id}" , :class => "btn btn-primary", :style =>"color:white" %></p>